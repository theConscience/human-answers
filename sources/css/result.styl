.mdl-layout__header-row
  @media (max-width: 480px)
    padding-left 58px

.mdl-layout__header-row .mdl-layout-title
  @media (max-width: 520px)
    font-size 17px
  @media (max-width: 480px)
    font-size 15px
  @media (max-width: 420px)
    font-size 13px
  @media (max-width: 360px)
    font-size 11px

.mdl-layout__drawer > .mdl-navigation > .save > i,
.mdl-layout__drawer > .mdl-navigation > .reset > i
  vertical-align top
  margin-right 7px
  margin-left -31px
  @media screen and (max-width: 1024px)
    margin-left -3px

.main-header
  @media (max-width: 420px)
    font-size 32px

.result-wrap .mdl-card
  @media (max-width: 520px)
    width 90%
  @media (min-width: 520px)
    width 70%
  @media (min-width: 920px)
    width 55%
  @media (min-width: 1100px)
    width 50%

.generator-tip
  @media (max-width: 420px)
    font-size 20px

.mdl-textfield__label
  @media (max-width: 420px)
    font-size 15px

.result-wrap .mdl-textfield--floating-label
  @media (max-width: 420px)
    padding-left: 10px;
    padding-right: 10px

.result-wrap label[for=phrase],
.result-wrap label[for=answer]
  @media (max-width: 420px)
    padding-left: 10px;
    padding-right: 10px

.prev-button
  @media (max-width: 420px)
    margin-right: 5px;
    height: 36px;
    width: 36px;
    min-width: 36px;

.next-button
  @media (max-width: 420px)
    margin-left: 5px;
    height: 36px;
    width: 36px;
    min-width: 36px;

.result
  padding 0
  // font-size 130%
  // text-align justify

.result-wrapper
  background-color aliceblue

.result-wrap
  flex 1 0 auto
  padding-top 10px
  padding-bottom 45px
  background-image url('../img/man.png')
  background-repeat no-repeat
  background-size auto
  background-position -50px bottom

.all-answers
  padding 0
  font-size 130%
  @media (max-width: 420px)
    font-size 110%

.answers-list
  margin-top 10px
  margin-right 5px
  margin-left 5px
  padding-top 0
  background-color aliceblue
  flex-grow 1
  flex-shrink 0
  flex-basis 250px

.answers-list-item
  margin-bottom 10px

.answers-list-item-group-name
  background-color aquamarine

.saved-phrase
  margin-bottom 0
  @media (max-width: 420px)
    font-size 20px

.question-group
  font-size 18px
  @media (max-width: 420px)
    font-size 16px

.question-group-number

.question-group-title

.question-description
  font-size 22px
  @media (max-width: 420px)
    font-size 20px
